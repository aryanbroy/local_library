extends layout

block content

    h1 <strong>#{title}</strong>
    p <strong>Title: </strong> #{book.title}
    p Summary: #{book.summary}
    h5 Do you want to delete this book?
    form(method='POST')
      div.form-group
        input#authorid.form-control(type='hidden', name='authorid', value=book.id )

      button.btn.btn-primary(type='submit') Delete
extends layout 

block content 
    
    h1= title
    p <strong>Genre name: </strong> #{genre.name}

    if allBooksInGenre.length
        p #[strong Delete the following books before attempting to delete this genre.]
        div(style='margin-left:20px;margin-top:20px')
            h4 Genre
            dl 
                each book in allBooksInGenre
                    dt  
                        a(href=book.url)  #{book.title}
                    dd #{book.summary}
    else
        p Do you really want to delete this genre?
        
        form(method='POST')
            div.form-group
                input#authorid.form-control(type='hidden', name='authorid', value=genre.id )

            button.btn.btn-primary(type='submit') Delete